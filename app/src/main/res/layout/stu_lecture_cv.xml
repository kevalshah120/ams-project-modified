<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/app_bg">

    <androidx.cardview.widget.CardView
        android:id="@+id/stu_lecture_cardview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="10dp"
        app:cardElevation="10dp"
        app:cardUseCompatPadding="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="15dp"
            android:layout_marginBottom="15dp">

            <TextView
                android:id="@+id/subject_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/muli_bold"
                android:text="@string/subject_name"
                android:textAllCaps="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:textColor="#E6200745"
                android:textSize="@dimen/_16sdp" />

            <ImageView
                android:id="@+id/teacher_icon"
                android:layout_width="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_height="wrap_content"
                android:layout_below="@id/subject_name"
                android:src="@drawable/ic_teacher_24" />

            <TextView
                android:id="@+id/prof_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/subject_name"
                android:layout_marginStart="5dp"
                android:layout_toEndOf="@id/teacher_icon"
                android:fontFamily="@font/muli_semibold"

                android:text="@string/professor_name"
                android:textColor="#3C3B3C"
                android:textSize="@dimen/_13sdp" />

            <Button
                android:id="@+id/mark_button"
                style="@style/Widget.MaterialComponents.Button"
                android:layout_width="@dimen/_65sdp"
                android:layout_height="@dimen/_40sdp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:backgroundTint="#1B5BBA"
                android:fontFamily="@font/montserrat_semibold"
                android:text="@string/mark"
                android:textAllCaps="false"
                android:textSize="@dimen/_13sdp"
                app:cornerRadius="@dimen/_5sdp" />
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>