<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/app_bg">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/stu_leave_cardview"
        app:cardElevation="10dp"
        app:cardUseCompatPadding="true"
        app:cardCornerRadius="10dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginBottom="15dp"
            android:layout_marginEnd="15dp"
            android:layout_marginTop="10dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="DBMS (3360702)"
                android:textAllCaps="true"
                android:id="@+id/subject_name"
                android:fontFamily="@font/poppins_semibold"
                android:textSize="@dimen/_18sdp"
                android:textColor="#E6200745"
                />
            <ImageView
                android:layout_width="wrap_content"
                android:id="@+id/teacher_icon"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_teacher_24"
                android:layout_below="@id/subject_name"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Prof Sanjay Bhalgama"
                android:layout_marginStart="5dp"
                android:layout_toEndOf="@id/teacher_icon"
                android:fontFamily="@font/poppins_medium"
                android:layout_below="@id/subject_name"
                android:id="@+id/leave_teacher_name"
                android:textSize="@dimen/_13sdp"
                android:textColor="#3C3B3C"
                />
            <Button
                android:id="@+id/mark_attend_button"
                style="@style/Widget.MaterialComponents.Button"
                android:layout_width="@dimen/_65sdp"
                android:layout_height="@dimen/_40sdp"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true"
                android:backgroundTint="#1B5BBA"
                android:fontFamily="@font/montserrat_semibold"
                android:text="Mark"
                android:textAllCaps="false"
                android:textSize="@dimen/_13sdp"
                app:cornerRadius="@dimen/_5sdp"

                />
    </RelativeLayout>

    </androidx.cardview.widget.CardView>
</LinearLayout>