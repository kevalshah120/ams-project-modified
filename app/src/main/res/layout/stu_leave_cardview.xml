<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/app_bg">

    <androidx.cardview.widget.CardView
        android:id="@+id/stu_leave_cardview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="10dp"
        app:cardElevation="10dp"
        app:cardUseCompatPadding="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="15dp"
            android:layout_marginBottom="15dp">

            <TextView
                android:id="@+id/leave_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:fontFamily="@font/poppins_medium"
                android:text="@string/leave_application_name"
                android:textColor="@color/txt_color"
                android:textSize="@dimen/_12sdp" />

            <TextView
                android:id="@+id/leave_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/leave_name"
                android:layout_alignParentStart="true"
                android:fontFamily="@font/poppins_medium"
                android:text="Mon 16 Aug - Wed 18 Aug"
                android:textColor="#200745"
                android:textSize="@dimen/_14sdp" />

            <ImageView
                android:id="@+id/teacher_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/leave_date"
                android:layout_alignParentStart="true"
                android:src="@drawable/ic_teacher_24" />

            <TextView
                android:id="@+id/leave_teacher_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/leave_date"
                android:layout_marginStart="5dp"
                android:layout_marginTop="1dp"
                android:layout_toEndOf="@id/teacher_icon"
                android:fontFamily="@font/poppins_medium"
                android:text="@string/professor_name"
                android:textColor="#3C3B3C"
                android:textSize="@dimen/_12sdp" />

            <ImageView
                android:id="@+id/status_tag"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:src="@drawable/approved_tag" />
        </RelativeLayout>

    </androidx.cardview.widget.CardView>
</LinearLayout>