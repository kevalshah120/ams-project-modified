<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/app_bg">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/stu_leave_cardview"
        app:cardElevation="10dp"
        app:cardUseCompatPadding="true"
        app:cardCornerRadius="10dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginBottom="15dp"
            android:layout_marginEnd="15dp"
            android:layout_marginTop="10dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/leave_name"
                android:text="Leave Application Name"
                android:fontFamily="@font/poppins_medium"
                android:textSize="@dimen/_12sdp"
                android:textColor="@color/txt_color"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mon 16 Aug - Wed 18 Aug"
                android:id="@+id/leave_date"
                android:layout_below="@id/leave_name"
                android:fontFamily="@font/poppins_medium"
                android:textSize="@dimen/_14sdp"
                android:textColor="#200745"
                />
            <ImageView
                android:layout_width="wrap_content"
                android:id="@+id/teacher_icon"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_teacher_24"
                android:layout_below="@id/leave_date"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_marginTop="1dp"
                android:layout_height="wrap_content"
                android:text="Prof Sanjay Bhalgama"
                android:layout_marginStart="5dp"
                android:layout_toEndOf="@id/teacher_icon"
                android:fontFamily="@font/poppins_medium"
                android:layout_below="@id/leave_date"
                android:id="@+id/leave_teacher_name"
                android:textSize="@dimen/_12sdp"
                android:textColor="#200745"
                />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/status_tag"
                android:src="@drawable/approved_tag"
                android:layout_alignParentEnd="true" />
        </RelativeLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:layout_gravity="bottom|right"
            android:layout_marginEnd="15dp">
            <ImageView
                android:id="@+id/description_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/description_tag" />
        </LinearLayout>

    </androidx.cardview.widget.CardView>
</LinearLayout>