<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/today_attendance_taken_cv"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="10dp"
    android:layout_marginHorizontal="5dp"
    android:foreground="?android:attr/selectableItemBackgroundBorderless"
    app:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:layout_marginVertical="10dp">
        <LinearLayout
            android:layout_width="wrap_content"
            android:id="@+id/linear_lay"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/subject_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/muli_bold"
                android:maxLength="18"
                android:text="@string/subject_name"
                android:textAllCaps="true"
                android:padding="3dp"
                android:textColor="#E6200745"
                android:textSize="@dimen/_16sdp" />
            <TextView
                android:id="@+id/div"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:maxLength="2"
                android:layout_gravity="center"
                android:background="#DDD7D7"
                android:fontFamily="@font/muli_semibold"
                android:text="@string/div"
                android:paddingHorizontal="3dp"
                android:textColor="@color/black"
                android:textSize="@dimen/_16sdp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_below="@id/linear_lay"
            android:layout_alignParentStart="true"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/teacher_icon"
                android:layout_width="@dimen/_20sdp"
                android:layout_gravity="center"
                android:layout_height="@dimen/_20sdp"
                android:src="@drawable/ic_teacher_24" />

            <TextView
                android:id="@+id/student_present_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:fontFamily="@font/muli_semibold"
                android:maxLength="9"
                android:text="@string/attendance_count"
                android:textColor="@color/black"
                android:textSize="@dimen/_16sdp" />
        </LinearLayout>
    </RelativeLayout>
</androidx.cardview.widget.CardView>